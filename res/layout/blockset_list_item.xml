<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:id="@+id/session_details"
        android:layout_toRightOf="@+id/session_date"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/block_set_name"
            android:layout_width="150dp"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="Block Set"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/number_of_blocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 blocks"
            android:textSize="12sp" />

    </LinearLayout>
    
    <ToggleButton
        android:id="@+id/blockset_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:layout_alignParentRight="true" />
    

     
</RelativeLayout>