<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" >
        
        <TextView
	        android:id="@+id/lesson_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Space Animals"
	        android:layout_marginRight="3dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textSize="22sp" />
        
	    <TextView
	        android:id="@+id/lesson_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lesson_name"
	        android:layout_marginBottom="5dp"
	        android:maxLines="2"
	        android:text="A psychadelic adventure in wonderland"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	     <ImageView
	        android:id="@+id/lesson_has_sound_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="18dp"
	        android:layout_marginTop="3dp"
	        android:layout_toRightOf="@+id/lesson_name"
	        android:alpha=".5"
	        android:src="@drawable/music_note" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_height="match_parent" >
		    
	    <ToggleButton
	        android:id="@+id/lesson_toggle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="ToggleButton" />
	
	   
        
	</RelativeLayout>

</LinearLayout>
