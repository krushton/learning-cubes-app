<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScanActivity" >

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/scan_message"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/nfc_edit_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message" >

        <TextView
            android:id="@+id/message_current_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Current value"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/current_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_current_value"
            android:ems="10"
            android:enabled="false" />

        <TextView
            android:id="@+id/message_remap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_value"
            android:layout_marginTop="10dp"
            android:text="@string/remap_message"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/remap_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_remap"
            android:ems="10" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remap_value"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:onClick="saveMapping"
            android:text="@string/save" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nfc_scan_layout"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
        
    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/scan_message"
        android:textSize="20sp" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/message"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:text="@string/empty"
        android:textSize="20sp" />
        
    </RelativeLayout>

</RelativeLayout>